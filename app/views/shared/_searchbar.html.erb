<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: books_path, method: :get, class: "d-flex", html: { autocomplete: "off" } do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= select_tag :genre_query,
      # will have to add more categories here at some point 
          options_for_select(["Dystopian", "Romance", "Southern Gothic", "Tragedy", "Adventure", "Coming-of-Age", "Fantasy",
                              "Science Fiction", "Crime", "Gothic Fiction" "Epic Poetry"],
          params[:genre_query]),
          class: "form-control",
          include_blank: "Genre"
      %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
