<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: books_path, method: :get, class: "d-flex", html: { autocomplete: "off" } do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= select_tag :genre_query,
      # this will probably cause issues until we have some better seeds - these categories were based on what I have 
          options_for_select(["Spirituality", "Mythopoeia", "Fantasy", "Crime/Detective", "Classic", "Mystery", "Short story",
                "Textbook", "Comic/Graphic Novel", "Short story", "Science fiction", "Fiction narrative", "Metafiction"],
          params[:genre_query]),
          class: "form-control",
          include_blank: "Genre"
      %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
