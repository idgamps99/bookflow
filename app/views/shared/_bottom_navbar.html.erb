<nav class="bottom_navbar">
  <ul class="bottom_navbar__tabs">
    <li class="bottom_navbar__tab">
      <% if controller_name == "pages"  %>
        <%= link_to root_path, class: "bottom_navbar__link", id: "discover" do %>
          <i class="fas fa-compass"></i>
          <span>Discover</span>
        <% end %>
      <% else %>
        <%= link_to root_path, class: "bottom_navbar__link", id: "discover" do %>
          <i class="fas fa-compass" style="color:#B6BEC7;"></i>
          <span>Discover</span>
        <% end %>
      <% end %>
    </li>

    <li class="bottom_navbar__tab">
      <% if controller_name == "trackers" || (controller_name == "reading_lists" && action_name == "show") %>
        <%= link_to trackers_path, class: "bottom_navbar__link", id: "reading-activity" do %>
          <i class="fas fa-book-open"></i>
          <span>Reading Activity</span>
        <% end %>
      <% else %>
        <%= link_to trackers_path, class: "bottom_navbar__link", id: "reading-activity" do %>
