<%= render "shared/searchbar" %>

<% if params[:query].present? %>
    <% @books.each do |book| %>
    
      <%= image_tag book.cover_url, alt: "Book Cover" unless book.cover_url.nil? %>
    <% end %>
<% end %>

<% if params{:genre_query}.present? %>
  <% @books.each do |book| %>
    <%= image_tag book.cover_url, alt: "Book Cover" unless book.cover_url.nil? %>
  <% end %>
<% end %>
