<%= render "shared/searchbar" %>

<% if params[:query].present? %>
    <% @books.each do |book| %>
      <%= link_to book_path(book.key) do %>
        <%= image_tag book.cover_url, alt: "Book Cover" unless book.cover_url.nil? %>
      <% end %>
    <% end %>
<% end %>

<% if params{:genre_query}.present? %>
  <% @books.each do |book| %>
      <%= link_to book_path(book.key) do %>
        <%= image_tag book.cover_url, alt: "Book Cover" unless book.cover_url.nil? %>
      <% end %>
    <% end %>
<% end %>
