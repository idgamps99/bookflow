<% if @tracker.blank? %>
  <p>Not tracked yet</p>
<% else %>

<div class="bf-card p-3">

  <div class="d-flex justify-content-between bf-text-time mb-0">
      <p>Total time spent: </p>
      <p>
        <strong><%= @tracker.total_minutes_spent / 3600 %></strong> Hours,
        <strong><%= (@tracker.total_minutes_spent % 3600) / 60 %></strong> Minutes,
        <strong><%= @tracker.total_minutes_spent % 60 %></strong> Seconds
      </p>
  </div>

  <div class="d-flex justify-content-between bf-text-pages">
    <p>Current page: </p>
    <p>
    <strong><%= @tracker.current_page %></strong>/<%= @reading_list.book.page_count %>
    </p>
  </div>

</div>

<div class="bf-chart">
  <%= column_chart @reading_sessions_done
                    .group_by_day_of_week(:session_start, format: "%a")
                    .sum(:duration).map { |k, v| [k, v/60] },
                    height: "240px",
                    colors: ["#e49933", "#e36f08"],
                    title: "Reading Sessions Duration",
                    library: {
                      scales: {
                        y: {
                          ticks: {
                            stepSize: 30
                          }
                        }
                      },
                      plugins: {
                        legend: {
                          display: false
                        },
                        tooltip: {
                          enabled: true
                        }
                      },
                      elements: {
                        bar: {
                          borderRadius: 30
                        }
                      }
                    } %>
</div>

<div class="bf-chart">
  <%= column_chart @reading_sessions_done
                      .group_by_day_of_week(:session_start, format: "%a")
                      .average(:page_count).map { |k, v| [k, v.to_i] },
                      height: "240px",
                      colors: ["#e49933", "#e36f08"],
                      title: "Average Pages Read",
                      library: {
                        plugins: {
                          legend: {
                            display: false
                          },
                          tooltip: {
                            enabled: true
                          }
                        },
                        elements: {
                          bar: {
                            borderRadius: 30
                          }
                        }
                      }
                      %>

</div>

<% end %>
